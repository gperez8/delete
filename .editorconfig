# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# MD
[* .md]
trim_trailing_whitespace = false

# Javascript y JSX
[*.{js,jsx}]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
max_line_length = 100
insert_final_newline = true

# Css
[*.{css,scss}]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true

# package.json or .travis.yml
[{package.json,.travis.yml}]
charset = utf-8
indent_style = tab
indent_size = 2
